<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homecard_listitem_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/homecard_title"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/basic_btn_bg"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,SpUsage" />

    <ImageView
        android:id="@+id/homecard_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/homecard_title"
        app:layout_constraintLeft_toLeftOf="@id/homecard_title"
        app:layout_constraintTop_toTopOf="@id/homecard_title" />

</androidx.constraintlayout.widget.ConstraintLayout>